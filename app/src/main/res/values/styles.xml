<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Button_tabs">

        <item name="android:textColor">@color/black</item>
        <item name="background">@drawable/tab_rounded_accent</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="AppTheme.Splash">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:checkBoxPreferenceStyle">@drawable/d_dashed_border_trans</item>
        <item name="android:checkboxStyle">@drawable/d_dashed_border_trans</item>
        <item name="android:tint">@color/colorPrimary</item>
        <item name="android:textColorHint">#444</item>

    </style>


    <style name="auth_editText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_50sdp</item>
        <item name="android:background">@null</item>
        <item name="android:drawablePadding">@dimen/dp10</item>
        <item name="android:textColor">#444</item>
        <item name="android:textColorHint">#ddd</item>
        <item name="android:textSize">13sp</item>
        <item name="android:singleLine">true</item>
        <!--
                <item name="android:digits">abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ</item>
        -->
    </style>



    <style name="auth_divider">
        <item name="android:layout_marginBottom">@dimen/dp30</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
    </style>


    <style name="auth_btn">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/d_item_selected</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/dp15</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="abt_txt">
        <item name="android:justificationMode">inter_word</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <dimen name="dp30">30dp</dimen>
</resources>
